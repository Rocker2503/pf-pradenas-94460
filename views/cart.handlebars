<div class="container mt-4">
    <h1>Tu Carrito</h1>
    <p class="text-muted">ID: <span id="cart-id-display">{{cartId}}</span></p>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Acci√≥n</th>
                </tr>
            </thead>
            <tbody id="cart-products-body">
                {{#each products}}
                <tr id="row-{{this.product._id}}">
                    <td>{{this.product.title}}</td>
                    <td>${{this.product.price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>
                        <button class="btn btn-danger btn-sm remove-from-cart" data-id="{{this.product._id}}">
                            Eliminar
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/carts.js"></script>