<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">{{product.title}}</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <p class="lead">{{product.description}}</p>
                    <hr>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item"><strong>Código:</strong> {{product.code}}</li>
                        <li class="list-group-item"><strong>Categoría:</strong> {{product.category}}</li>
                        <li class="list-group-item"><strong>Stock:</strong> {{product.stock}} unidades</li>
                        <li class="list-group-item"><strong>Estado:</strong> 
                            {{#if product.status}}
                                <span class="badge bg-success">Disponible</span>
                            {{else}}
                                <span class="badge bg-danger">Agotado</span>
                            {{/if}}
                        </li>
                    </ul>
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>Precio: <span class="text-success">${{product.price}}</span></h3>
                        <button class="btn btn-warning btn-lg" onclick="addToCart('{{product._id}}')">
                            <i class="bi bi-cart-plus"></i> Agregar al Carrito
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="/home" class="btn btn-outline-secondary">Volver al Catálogo</a>
        </div>
    </div>
</div>

<script>
    const cartId = '6967af242ca9fd629b3abfce';

    function addToCart(productId){
        fetch(`/api/carts/${cartId}/product/${productId}`, {
            method: 'POST'
        }).then(res => res.json())
            .then(data => {
                if (data.status === "success") {
                    alert("¡Producto añadido al carrito!");
                } else {
                    alert("Error al añadir producto.");
                }
            })
            .catch(err => console.error("Error:", err));
    }

</script>